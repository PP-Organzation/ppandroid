<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAPPThemeLight">

    </style>

    <style name="AppThemeNight" parent="BaseAPPThemeNight">

    </style>
    <style name="AppThemeCYAN" parent="BaseAPPThemeCYAN">

    </style>
    <!--白天-->
    <style name="BaseAPPThemeLight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="textLight">@color/colorPrimaryNight</item>
        <item name="appBg">@color/white</item>
        <item name="textNight">@color/gray</item>
    </style>
    <!--黑夜主题-->
    <style name="BaseAPPThemeNight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="textLight">@android:color/white</item>
        <item name="appBg">@color/colorPrimaryDarkNight</item>
        <item name="textNight">@color/gray</item>
    </style>

    <!--CYAN theme-->
    <style name="BaseAPPThemeCYAN" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="textLight">@color/primary_text</item>
        <item name="appBg">@android:color/white</item>
        <item name="textNight">@color/secondary_text</item>
    </style>
</resources>
